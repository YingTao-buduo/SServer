<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ScheduleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                layout="@layout/title_bar"
                android:id="@+id/topTitle"></include>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="56dp">
                    <TextView
                        android:layout_width="23dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/week_view_border" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="一"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:background="@drawable/week_view_border"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="二"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:background="@drawable/week_view_border"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="三"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:background="@drawable/week_view_border"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="四"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:background="@drawable/week_view_border"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="五"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:background="@drawable/week_view_border"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="六"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:background="@drawable/week_view_border"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="日"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:background="@drawable/week_view_border"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_below="@id/topTitle">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="1"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="2"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="3"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="4"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="5"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="6"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="7"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="8"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="9"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="10"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="11"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="12"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="13"
                    android:textSize="20dp"
                    android:background="@drawable/schedule_text_view_border"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="88dp"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="89dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/rl_monday"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <RelativeLayout
                    android:id="@+id/rl_tuesday"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <RelativeLayout
                    android:id="@+id/rl_wednesday"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <RelativeLayout
                    android:id="@+id/rl_thursday"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <RelativeLayout
                    android:id="@+id/rl_friday"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <RelativeLayout
                    android:id="@+id/rl_saturday"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <RelativeLayout
                    android:id="@+id/rl_sunday"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>