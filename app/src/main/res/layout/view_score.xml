<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:background="@drawable/work_view_border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/tv_score_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/colorNumber"
                android:text="0000-0001学年"/>
            <TextView
                android:id="@+id/tv_score_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/colorNumber"
                android:text="第0学期"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_score_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程名称"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorItem"/>
        <TextView
            android:id="@+id/tv_score_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="课程类型"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/tv_score_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="学分：0"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_score_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="成绩：0"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_score_gp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="绩点：0"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>