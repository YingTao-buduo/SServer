<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_weight="1"
            android:background="@drawable/info_background"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"
                android:src="@drawable/default_head"
                android:layout_weight="3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓  名"
                    android:textColor="@color/colorItem"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学  号"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_user_college"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorItem"
                    android:layout_marginTop="35dp"
                    android:text="学  院"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_user_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorItem"
                    android:text="专  业"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="60dp"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:background="@drawable/user_button"
                    android:text="同步成绩/考试信息"/>
                <Button
                    android:id="@+id/btn_in_and_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:background="@drawable/user_button"
                    android:text="进出校园"/>
                <Button
                    android:id="@+id/btn_daily_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:background="@drawable/user_button"
                    android:text="疫情打卡"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="#fff">
                    <Button
                        android:id="@+id/btn_es"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="18dp"
                        android:background="@color/userButton"
                        android:text="教务管理系统"/>
                    <Button
                        android:id="@+id/btn_eol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/user_button2"
                        android:text="网络教学平台"/>
                    <Button
                        android:id="@+id/btn_tm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="18dp"
                        android:background="@color/userButton"
                        android:text="教学管理系统"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_user_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/button_box"
                    android:text="登录"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>