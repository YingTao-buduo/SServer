<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorBG">

    <WebView
        android:id="@+id/wv_check_code"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/et_check_code"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/transparent_box"
        android:textColor="@color/colorLoginText"
        android:textColorHint="@color/colorLoginText"
        android:gravity="center"
        android:hint="请输入验证码" />
    <Button
        android:id="@+id/btn_check_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_box"
        android:textColor="@color/colorLoginText"
        android:text="确认"
        android:layout_marginBottom="15dp"/>
</LinearLayout>