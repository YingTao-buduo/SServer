<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:background="@drawable/work_view_border">
        <TextView
            android:id="@+id/tv_exam_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textColor="@color/colorItem"
            android:text="课程名称"/>
        <TextView
            android:id="@+id/tv_exam_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="考试时间"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/tv_exam_classroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="考场信息"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_exam_seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="座位号"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_exam_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="监考老师"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>